{
  "manifest_version": 3,
  "name": "YouTube字幕電子書製作器",
  "version": "0.2.0",
  "description": "將YouTube影片字幕截圖組合成可翻頁的電子書",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "unlimitedStorage",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "subtitleDetection.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "viewer.html",
        "reader.html",
        "reader.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}